{
  "name": "r7extlib",
  "private": true,
  "version": "0.2.1",
  "description": "Easy interaction with Canal+ R7 box for external webapps",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/canalplus/r7extlib.git"
  },
  "bugs": {
    "url": "https://github.com/canalplus/r7extlib/issues"
  },
  "homepage": "https://github.com/canalplus/r7extlib",
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "build": "npm run jshint && npm run jscs && npm run clean && webpack --progress --colors --optimize-occurence-order",
    "build:min": "npm run jshint && npm run jscs && npm run clean && webpack --progress --colors --optimize-minimize",
    "jscs": "jscs ./src",
    "jshint": "jshint ./src",
    "test": "mocha-phantomjs -R spec ./specs/index.html"
  },
  "devDependencies": {
    "babel": "^6.0.15",
    "babel-core": "^6.1.2",
    "babel-loader": "^6.1.0",
    "babel-preset-es2015": "^6.1.2",
    "babel-runtime": "^6.0.14",
    "chai": "^3.4.0",
    "jscs": "^2.5.1",
    "jshint": "^2.8.0",
    "mocha": "^2.3.3",
    "object-assign": "^4.0.1",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.3"
  },
  "dependencies": {
    "object-assign": "^4.0.1"
  }
}
