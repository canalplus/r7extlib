{
  "name": "r7extlib",
  "private": true,
  "version": "0.2.4",
  "description": "Easy interaction with Canal+ R7 box for external webapps",
  "main": "dist/r7extlib.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/canalplus/r7extlib.git"
  },
  "bugs": {
    "url": "https://github.com/canalplus/r7extlib/issues"
  },
  "homepage": "https://github.com/canalplus/r7extlib",
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "build": "npm run clean && webpack --progress --colors --optimize-occurence-order && uglifyjs dist/r7extlib.js -o samples/basic/r7extlib.js",
    "build:min": "npm run clean && webpack --progress --colors --optimize-minimize",
    "jscs": "jscs ./src",
    "jshint": "jshint ./src",
    "test": "mocha-phantomjs -R spec ./specs/index.html"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-core": "6.6.0",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-1": "6.5.0",
    "babel-runtime": "6.6.1",
    "chai": "3.5.0",
    "express": "4.13.4",
    "mocha": "2.4.5",
    "sinon": "1.17.3",
    "sinon-chai": "2.8.0",
    "uglify-js": "2.6.2",
    "webpack": "1.12.14",
    "winston": "2.2.0"
  }
}
